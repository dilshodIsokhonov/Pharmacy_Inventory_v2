<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PharmacyInventory" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.PharmacyInventory.TextInputLayout</item>
        <item name="chipGroupStyle">@style/Widget.Material3.ChipGroup</item>
        <item name="tabStyle">@style/Widget.Material3.TabLayout.Secondary</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Theme.PharmacyInventory" parent="Base.Theme.PharmacyInventory" />

    <style name="Theme.PharmacyInventory.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PharmacyInventory.AppBarOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.PharmacyInventory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.PharmacyInventory.Toolbar.Text" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PharmacyInventory.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>
</resources>